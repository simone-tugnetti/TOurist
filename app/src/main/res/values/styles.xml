    <!-- Styles per la toolbar ad arco -->

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <!--<item name="android:accessibilityFocusedDrawable">true</item>-->
        <!--<item name="android:layout_maxWidth">#ff000000</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.NoActionBar.nostatusbar" parent="@style/AppTheme">
        <!--<item name="android:searchViewVoiceIcon">true</item>-->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <!-- F. Ho copiato lo style di nostatusbar altrimenti nelle schermate compariva.
            Se trovo un modo migliore per non ripetere il codice modifico. -->
    <style name="AppTheme.Launcher">
        <!--<item name="android:windowBackground">@drawable/launch_screen</item>-->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.nostatusbar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.nostatusbar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.nostatusbar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
